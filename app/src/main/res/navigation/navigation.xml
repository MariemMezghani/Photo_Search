<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.mariemmezghani.photo_search.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.github.mariemmezghani.photo_search.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="photo"
            app:argType="com.github.mariemmezghani.photo_search.model.Photo" />
    </fragment>
    <argument
        android:name="photo"
        type="com.github.mariemmezghani.photo_search.model.Photo"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.github.mariemmezghani.photo_search.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>